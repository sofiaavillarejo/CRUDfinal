
<h1 style="color: lightpink">Salas</h1>

<table class="table table-bordered table-hover">
	<thead>
		<tr>
			<td>IdHospital</td>
			<td>IdSala</td>
			<td>Nombre</td>
			<td>Numero de camas</td>
		</tr>
	</thead>

	<tbody>
		@foreach (Sala sala in Model)
		{
			<tr>
				<td>@sala.Hospital_cod</td>
				<td>@sala.Sala_cod</td>
				<td>@sala.Nombre</td>
				<td>@sala.Numcama</td>
				<td><a asp-controller="Salas" asp-action="Detalles" asp-route-sala_cod="@sala.Sala_cod" class="btn btn-warning">Detalle</a><a asp-controller="Salas" asp-action="Delete" asp-route-sala_cod="@sala.Sala_cod" class="btn btn-danger">Eliminar</a><a asp-controller="Salas" asp-action="Update" asp-route-sala_cod="@sala.Sala_cod" class="btn btn-success">Modificar</a></td>
			</tr>
		}
	</tbody>

</table>


